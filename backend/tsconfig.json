{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": ".",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "isolatedModules": true,

    "types": ["node", "jest"],
    "sourceMap": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}